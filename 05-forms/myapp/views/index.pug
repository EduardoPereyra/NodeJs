extends layout

block content
   
  div.container

      h1(class="title is-1") Contact  

      form(name="myform" action="/submit-form" method="POST" enctype="multipart/form-data")
      
          div.field
              label.label Name
              div.control.has-icons-left.has-icons-right
                  input.input(type="text" name="username" placeholder="Name")
                  span.icon.is-small.is-left
                      i.fas.fa-user

          div.field
              label.label Email
              div.control.has-icons-left.has-icons-right
                  input.input(type="text" name="email" placeholder="Email")
                  span.icon.is-small.is-left
                      i.fas.fa-envelope

          div.field
              label.label Subject
              div.control
                  input(name="photo",type="file")

          div.field
              label.label Message
              div.control
                  textarea.textarea(placeholder="Message" name="message") 

          div.field
              div.control
                  label.checkbox
                  input(type="checkbox" name="terms")
                  a(href="/") I agree to the terms and conditions

          div.field.is-grouped
              div.control
                  button.button.is-link Submit
              
              div.control
                  button.button.is-text Cancel